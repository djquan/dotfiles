[user]
  name = Dan Quan
  email = dan@quan.io

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  autocrlf = false
  safecrlf = true

[github]
  user = djquan

[alias]
  ctags = !.git/hooks/ctags
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
  ds = diff --staged

[color]
  ui = true
[pull]
  rebase = true
[push]
  default = simple

[init]
	defaultBranch = main

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only
